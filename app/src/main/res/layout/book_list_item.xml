<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_deep_teal_200">

    <ImageView
        android:layout_width="@dimen/book_image_width"
        android:layout_height="@dimen/book_image_height"
        android:id="@+id/book_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></ImageView>
    <TextView
        android:id="@+id/book_title"
        android:text="Title"
        android:layout_toRightOf="@id/book_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:id="@+id/book_author"
        android:layout_below="@id/book_title"
        android:layout_alignStart="@id/book_title"/>

</RelativeLayout>


